<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.notation.campusnote.login.LoginActivity"
    android:background="#77967d">

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/temporary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="44dp"
        android:layout_marginTop="34dp"/>
    <TextView
        android:layout_width="177dp"
        android:layout_height="33dp"
        android:layout_marginStart="76.12dp"
        android:layout_marginTop="32dp"
        android:text="Campus Note"
        android:textSize="28dp"
        android:textFontWeight="600"
        android:textColor="#FFFCFCFC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="246dp"
        android:layout_height="74dp"
        android:text="당신을 이해하는 노트, \n캠퍼스 노트"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="39dp"
        android:layout_marginTop="34dp"
        android:textColor="@color/white"
        android:textFontWeight="600"
        android:letterSpacing="0.56"/>
<!--폰트 때문인지 크기 맞추면 글이 다 안 보임@@@-->

    <ImageButton
        android:layout_width="28dp"
        android:layout_height="26dp"
        android:background="@android:color/transparent"
        android:src="@drawable/icon_kakao"
        app:layout_constraintBottom_toBottomOf="@id/kakao_login_button"
        app:layout_constraintStart_toStartOf="@id/kakao_login_button"
        app:layout_constraintTop_toTopOf="@id/kakao_login_button"
        android:layout_marginStart="32dp"
        android:elevation="41dp"/>
    <Button
        android:id="@+id/kakao_login_button"
        android:layout_width="1108dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/kakao_btn_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:elevation="40dp"
        android:text="카카오 로그인"
        android:textColor="#D9000000"
        android:textFontWeight="500"
        android:textSize="20dp"
        android:textAlignment="center"
        tools:ignore="RtlCompat"/>

</androidx.constraintlayout.widget.ConstraintLayout>